   // Abro el archivo para lectura.
   FILE* archivoNumeros = fopen("numeros.x", "r + b");

   if(archivoNumeros == NULL){

      cout << "Ha habido un error.";
   }

   // Convierto a cadena lo que haya en el archivo.
   string cadenaNumerica = "";
   cadenaNumerica += read<char>(archivoNumeros);
   while(!feof(archivoNumeros)){

      cadenaNumerica += read<char>(archivoNumeros);
   }

   cout << cadenaNumerica << endl;

   // La proceso para el punto 1.8.1.1.

   // Hallo el valor más grande en la cadena.
   char caracterNumMayor = cadenaNumerica[0];
   for(int i = 1; i < length(cadenaNumerica); i++){

      char sigCaracter = cadenaNumerica[i];

      if(sigCaracter > caracterNumMayor){

         caracterNumMayor = sigCaracter;
      }

   }

   cout << "El mayor de los dígitos es: " << caracterNumMayor << endl;

   // Hallo las posiciones en las que se encuentra dicho valor.
   cout << "Posiciones en las que aparece: ";
   for(int i = 0; i < length(cadenaNumerica); i++){

      if(cadenaNumerica[i] == caracterNumMayor){

         cout << i << ", ";

      }

   }
